<div
  class={{concat-class
    "neattube-video-container"
    (concat @videoAttributes.instanceName "-onebox")
    (if this.isLoaded "video-loaded")
  }}
  data-video-id={{@videoAttributes.id}}
  data-video-title={{@videoAttributes.title}}
  data-video-start-time={{@videoAttributes.startTime}}
  data-instance-name={{@videoAttributes.instanceName}}
>
  {{#if this.isLoaded}}
    <NeattubeIframe
      @instanceName={{@videoAttributes.instanceName}}
      @title={{@videoAttributes.title}}
      @videoId={{@videoAttributes.id}}
      @startTime={{@videoAttributes.startTime}}
    />
  {{else}}
    <div
      class={{concat-class "video-thumbnail" @videoAttributes.instanceName}}
      tabindex="0"
      style={{this.thumbnailStyle}}
      {{on "click" this.loadEmbed}}
      {{on "keypress" this.loadEmbed}}
    >
      <img
        class={{concat @videoAttributes.instanceName "-thumbnail"}}
        src={{@videoAttributes.thumbnail}}
        title={{@videoAttributes.title}}
        loading="lazy"
      />
      <div
        class={{concat-class
          "icon"
          (concat @videoAttributes.instanceName "-icon")
        }}
      ></div>
    </div>
    <div class="title-container">
      <div class="title-wrapper">
        <a
          target="_blank"
          rel="noopener noreferrer"
          class="title-link"
          href={{@videoAttributes.url}}
          title={{@videoAttributes.title}}
        >
          {{@videoAttributes.title}}
        </a>
      </div>
    </div>
  {{/if}}
</div>
